<%- include('../partials/header') %>

  <section id="about">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <form method="post">
            <h2>Editar Séries</h2>

            <div class="form-group">
              <label for="name">Nome da série</label>
              <input value="<%= serie.name %>" id="exampleinputName" type="text" class="form-control" aria-describedby="nameHelp"
                placeholder="Informe o nome" name="name" />
              <small id="nameHelp" class="form-text">Nome da série a ser salvo.</small>
            </div>

            <div class="form-group">
              <label for="status">Situação</label>
              <select id="status" class="form-control" name="status">
                <% labels.forEach( label => { %>
                  <option value="<%= label.id %>" <% if(label.id===serie.status) { %> selected <% } %>><%= label.name %></option>
                <% }) %>
              </select>
            </div>

            <button class="btn btn-primary">Salvar</button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <%- include('../partials/footer') %>