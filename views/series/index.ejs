<%- include('../partials/header') %>

  <section id="about">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <h2>Series</h2>
          <p class="lead">Todas as séries cadastradas. <a href="series/nova" class="btn btn-info">Nova série</a></p>
          <table class="table table-hover">
            <% series.forEach( serie => { %>
              <tr>
                <td>
                  <%= serie.name %>
                </td>
                <td>
                  <span class="badge rounded-pill px-3 py-2  <%= labels.filter( label => label.id === serie.status )[0].desc %>">
                    <%= labels.filter( label => label.id === serie.status )[0].name %>
                  </span>
                </td>
                <td>
                  <a href="/series/editar/<%= serie._id %>">Editar</a> | 
                  <a href="/series/excluir/<%= serie._id %>">Excluir</a>
                </td>
              </tr>
            <% }) %>
          </table>
        </div>
      </div>
    </div>
  </section>

  <%- include('../partials/footer') %>